
 function setup() {
  // put setup code here
    createCanvas(innerWidth,innerHeight);
    background (bgColor);
    
  
  noStroke();
      
  // Color Button
  let blueButton;
  blueButton = createButton('Blue');
  blueButton.size(200,100);
  blueButton.position(20,50);
  blueButton.style ('background:blue');
  blueButton.mousePressed(changeBlue);
      
  let OrangeButton;
  orangeButtonButton = createButton('Orange');
  orangeButton.size(200,100);
  orangeButton.position(40,60);
  orangeButton.style ('background:orange');
  orangeButton.mousePressed(changeOrange);
      
  let RedButton;
  redButton = createButton('Red');
  redButton.size(200,100);
  redButtonButton.position(60,70);
  redButton.style ('background:red');
  redButton.mousePressed(changeRed);
      
 let EraseButton;
 eraseButton = createButton('Erase')
 eraseButto.size (200,100);
 eraseButton.position(80,80);
 eraseButton.style ('background:white');
 eraseButton.mousePressed(changeErase);
      
  }

function changeBlue(){
    fill('blue');
}

function changeOrange(){
    fill('orange');
}
  
function changeRed(){
    fill('red');
}

function changeErase(){
    fill('Erase');
}

function draw() {
  // put drawing code here
    if(mouseIsPressed)
    ellipse (mouseX, mouseY, 20,20);   
     }
